<h2>Add Kopi</h2>

<%= form_with scope: :kopi, url: kopis_path, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_area :name %>
  </p>

  <%= form.collection_select :roast_id, @roasts, :id, :name %>

  <%= form.collection_select :origin_id, @origins, :id, :name, options=
      {:prompt => false} %>

  <p>
    <%= form.label :price_per_pound %><br>
    <%= form.number_field :price %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>